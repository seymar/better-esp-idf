{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "hello_world",
            "type": "cppdbg",
            "request": "launch",

            // Set up GDB to connect to it
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\Users\\Stijn\\.espressif\\tools\\xtensa-esp32-elf\\esp-2020r3-8.4.0\\xtensa-esp32-elf\\bin\\xtensa-esp32-elf-gdb.exe",
            "program": "//wsl$/Ubuntu/home/stijn/dev/better-esp-idf/build/hello_world.elf",
            "cwd": "//wsl$/Ubuntu/home/stijn/dev/better-esp-idf/",
            "setupCommands": [
                { "text": "target remote | C:/Users/Stijn/.espressif/tools/openocd-esp32/v0.10.0-esp32-20200709/openocd-esp32/bin/openocd-esp32.exe -f //wsl$/Ubuntu/home/stijn/dev/better-esp-idf/tools/ftdi_mini_module.cfg -f target/esp32.cfg -c 'gdb_port pipe; log_output openocd.log' -c 'init'" },
                // Without this the debugger does not stop at app_main
                { "text": "file '//wsl$/Ubuntu/home/stijn/dev/better-esp-idf/build/hello_world.elf'" },

                // https://docs.espressif.com/projects/esp-idf/en/release-v4.2/esp32/api-guides/jtag-debugging/tips-and-quirks.html#what-is-the-meaning-of-debugger-s-startup-commands
                { "text": "set remote hardware-watchpoint-limit 2"},

                // Reset and halt the target
                { "text": "mon reset halt" },

                // Flush away the old state before reset
                { "text": "flushregs" },

                // Set temporary hardware breakpoint at app_main
                { "text": "thb app_main" }
            ], 
            "sourceFileMap":{
                "vscode-remote": "haha"
            },
            "logging": {
                "engineLogging": true,
                "exceptions": true,
                "programOutput": true,
                "trace": false
            },
        }
    ]
  }